<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/com.example.smartlink"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/textView_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:onClick="startSnifferSmartLinkerActivity"
            android:text="SnifferSmartLinkerActivity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Use SnifferSmartLinkerActivity provided by SmartLink library to setup hiflying module, less code but more easier!"
            android:textSize="10sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="startSnifferSmartLinkerFragment"
            android:text="SnifferSmartLinkerFragment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="SnifferSmartLinkerFragment has the same functionality with SnifferSmartLinkerActivity, but it&apos;s a fragment and must be used in a activity."
            android:textSize="10sp" />

        <Button
            android:drawableLeft="@drawable/aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="startCustomizedActivity"
            android:text="发送组播和发送广播" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Create your activity and use SmartLink library to setup hiflying module."
            android:textSize="10sp" />

        <!-- <com.example.smartlink.ui.DotProgressBar
            android:id="@+id/dot_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            custom:amount="5"
            custom:duration="@android:integer/config_longAnimTime"
            custom:endColor="@color/light_blue_A400"
            custom:startColor="@color/light_blue_A700" /> -->
    </LinearLayout>

</ScrollView>